<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>

<?import javafx.scene.control.PasswordField?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@css/style.css" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="spring.fx.controllers.LoginController">
    <children>
        <AnchorPane layoutX="200.0" layoutY="100.0" prefHeight="200.0" prefWidth="200.0">
            <children>
                <BorderPane prefHeight="200.0" prefWidth="200.0">
                    <center>
                        <AnchorPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                            <children>
                                <TextField fx:id="login" layoutX="7.0" layoutY="28.0" promptText="Login" />
                                <PasswordField fx:id="password" layoutX="7.0" layoutY="59.0" promptText="Password" />
                                <Label layoutX="55.0" layoutY="4.0" text="Authorization" />
                            </children>
                        </AnchorPane>
                    </center>
                    <bottom>
                        <AnchorPane prefHeight="99.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                            <children>
                                <Button fx:id="signIn" layoutX="35.0" layoutY="14.0" mnemonicParsing="false" onAction="#authorization" text="Sign in" />
                                <Button fx:id="signUp" layoutX="100.0" layoutY="14.0" mnemonicParsing="false" onAction="#registration" text="Sign up" />
                                <Label fx:id="info" layoutX="80.0" layoutY="64.0" />
                            </children>
                        </AnchorPane>
                    </bottom>
                </BorderPane>
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
