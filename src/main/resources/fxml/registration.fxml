<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>

<?import javafx.scene.control.PasswordField?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@css/style.css" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="spring.fx.controllers.RegistrationController">
    <children>
        <AnchorPane layoutX="200.0" layoutY="100.0" prefHeight="200.0" prefWidth="200.0">
            <children>
                <BorderPane prefHeight="200.0" prefWidth="200.0">
                    <center>
                        <AnchorPane prefHeight="181.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                            <children>
                                <TextField fx:id="login" layoutX="7.0" layoutY="28.0" promptText="Login" />
                                <PasswordField fx:id="password" layoutX="7.0" layoutY="59.0" promptText="Password" />
                                <Label layoutX="55.0" layoutY="4.0" text="Registration" />
                                <PasswordField fx:id="confirmPassword" layoutX="7.0" layoutY="85.0" promptText="Confirm password" />
                                <TextField fx:id="name" layoutX="7.0" layoutY="116.0" promptText="Name" />
                                <TextField fx:id="email" layoutX="7.0" layoutY="147.0" promptText="Email" />
                            </children>
                        </AnchorPane>
                    </center>
                </BorderPane>
            </children>
        </AnchorPane>
        <Label fx:id="info" layoutX="283.0" layoutY="340.0" />
        <Button fx:id="signUp" layoutX="300.0" layoutY="318.0" mnemonicParsing="false" onAction="#registration" text="Sign up" />
        <Button fx:id="signIn" layoutX="234.0" layoutY="318.0" mnemonicParsing="false" onAction="#authorization" text="Sign in" />
    </children>
</AnchorPane>
